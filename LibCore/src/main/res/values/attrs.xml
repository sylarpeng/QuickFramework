<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ZImageView">
        <attr name="scaleType" format="enum">
            <enum name="center_inside" value="0"></enum>
            <enum name="center_crop" value="1"></enum>
            <enum name="fit_center" value="2"></enum>
        </attr>
        <attr name="placeHolder" format="reference"></attr>
        <attr name="errorHolder" format="reference"></attr>
        <attr name="isCircle" format="boolean"></attr>
        <attr name="circleBorderWidth" format="dimension"></attr>
        <attr name="circleBorderColor" format="color"></attr>
        <attr name="isRound" format="boolean"></attr>
        <attr name="roundRadius" format="dimension"></attr>
        <attr name="isBlur" format="boolean"></attr>
        <attr name="rotationAngle" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="BadgeText">
        <attr name="badgeBgColor" format="color"></attr>
        <attr name="badgeTxSize" format="dimension"></attr>
        <attr name="badgeTxColor" format="color"></attr>
        <attr name="badgeRadius" format="dimension"></attr>
    </declare-styleable>
</resources>