<?xml version="1.0" encoding="utf-8"?>



    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/sv"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.zz.quickframework.MainActivity4"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="show empty"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="show error"
                android:gravity="center"

                />
            <com.zz.libcore.widget.image.ZImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#66ff0000"
                app:scaleType="center_crop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv1"
                    android:layout_width="100dp"
                    android:background="#66ff0000"
                    android:layout_height="100dp"
                    app:scaleType="center_crop"

                    />
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv2"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:scaleType="center_inside"
                    />

                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv3"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:scaleType="fit_center"
                    app:isBlur="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv4"
                    android:layout_width="100dp"
                    android:background="#66ff0000"
                    android:layout_height="100dp"
                    app:scaleType="center_crop"
                    app:isCircle="true"
                    app:circleBorderColor="@color/white"
                    app:circleBorderWidth="1dp"

                    />
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv5"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:scaleType="center_crop"
                    app:isRound="true"
                    app:roundRadius="10dp"
                    />

                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv6"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:isRound="true"
                    app:roundRadius="10dp"
                    app:scaleType="fit_center"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv7"
                    android:layout_width="100dp"
                    android:background="#66ff0000"
                    android:layout_height="100dp"
                    app:scaleType="center_crop"
                    app:isCircle="true"
                    app:circleBorderColor="@color/red"
                    app:circleBorderWidth="0.5dp"
                    app:rotationAngle="270"

                    />
                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv8"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:scaleType="center_crop"
                    />

                <com.zz.libcore.widget.image.ZImageView
                    android:id="@+id/iv9"
                    android:background="#66ff0000"
                    android:layout_marginStart="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:scaleType="fit_center"
                    app:isBlur="true"
                    />
            </LinearLayout>


            <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="1"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="5"
                />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

